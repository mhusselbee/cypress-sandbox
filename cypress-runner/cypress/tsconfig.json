{
  "compilerOptions": {
    "target": "esnext",
    "module": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./lib",
    "rootDir": ".",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "types": [
      "cypress"
    ]
  },
  "allowSyntheticDefaultImports": true,
  "include": [
    "src",
    "integration",
    "cypress-runner/cypress/**/*",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}